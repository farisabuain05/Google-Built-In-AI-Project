{
  "manifest_version": 3,
  "name": "TLDRify",
  "version": "1.0",
  "description": "Summarize and highlight web pages using Chromeâ€™s built-in AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "ai_summarizer",
    "ai_prompt"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/mark.min.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
